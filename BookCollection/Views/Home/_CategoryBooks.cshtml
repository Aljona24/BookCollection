@model IEnumerable<BookCollection.ViewModels.CategoryGroup>

<h2>Category Statistics</h2>
<table class="table table-hover">
    <tr>
        <th style="width:50%">
            Category
        </th>
        <th style="width:50%">
            Book count
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @item.BookCount
            </td>
        </tr>
    }
</table>

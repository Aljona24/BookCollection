@model BookCollection.Models.Book

@{
    ViewBag.Title = "UploadCover";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Upload book cover for @Model.Title</h2>

<p>
    @BC.IconButton("Books", "Details", "eye-open", "Back to details", new { id = Model.BookID })
</p>
<hr />
<div class="row">
    <div class="col-md-12">
        
        @if (ViewBag.Error != null)
        {
            <h4 style="color:red">@ViewBag.Error</h4>
        }
        @using (Html.BeginForm("UploadCover", "Books",
            FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div>Upload Cover Image</div>
            @Html.HiddenFor(Model => Model.BookID)
            <input type="file" name="imagefile" />
            <input type="submit" value="upload" />
        }
    </div>
</div>